<script type="text/javascript">
    $(document).ready(function () {
        $('.datepicker').datepicker({
            changeMonth:true,
            changeYear:true,
            dateFormat: "dd/mm/yy",
            yearRange: "-125:+0"
        });
        $('.calendarbtn').click(openNearestDatePicker);

        if ($('#studenttype').val() === '1') {
            $('#workplace').show();
        }
        else {
            $('#workplace').hide();
        }
        $('#studenttype').change(function() {
            var $elt = $(this);
            if ($elt.val() === '1') {
                $('#workplace').slideDown();
            }
            else {
                $('#workplace').slideUp();
            }
        });
        $(".tablegrid tbody").click(function(event) {
            $(oTable.fnSettings().aoData).each(function (){
                $(this.nTr).removeClass('row_selected');
            });
            $(event.target.parentNode).addClass('row_selected');
        });

        /* Init the table */
        oTable = $('.tablegrid').dataTable({
            "bJQueryUI": true,
            "bPaginate": false,
            "bSort": true,
            "bInfo": false,
            "bFilter": false,
            "bAutoWidth": false
        });

    });

    $(function() {
        $( "#dialog-form" ).dialog({
            autoOpen: false,
            width: 600,
            modal: true,
            buttons: {
                Delete: function() {
                    if (confirm('Are you sure you want to delete record id ' + $("#class_modules_id").val() + '?')) {
                        $("#data_action").val("delete");
                        $(this).dialog("close");

                        $("#remove_modules_id").val($("#class_modules_id").val());
                    }
                },
                "Save": function() {

                    if ($("#class_modules_id").val() == 0){
                        $("#data_action").val("addnew");
                    } else {
                        $("#data_action").val("update");
                    }

                    oTable.fnAddData(["A", "B"]);
                    $("#add_modules_id").val($("#class_modules_id").val());
                    $( this ).dialog( "close" );
                },
                Cancel: function() {
                    $( this ).dialog( "close" );
                }
            }
        });

        $( "#addmodule" )
            .button()
            .click(function() {
                $('#dialog-form').dialog('option', 'title', 'Add Class Module');
                $("#class_modules_id").val("0");

                $( "#dialog-form" ).dialog( "open" );
            });

    });


    function edititem(d){

        $('#dialog-form').dialog('option', 'title', 'Update Class Module');

        $("#class_modules_id").val(d['id']);

        $( "#dialog-form" ).dialog( "open" );
    }

</script>
